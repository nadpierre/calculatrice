<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="20dp">
    <TextView
        android:id="@+id/txtOperation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textSize="30dp" />
    <TextView
        android:id="@+id/txtResultat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textSize="60dp"
        android:text="@string/zero"/>

    <GridLayout
        android:id="@+id/grille"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:columnCount="5"
        android:rowCount="5"
        android:useDefaultMargins="true">


        <!-- Première rangée -->
        <Button
            android:id="@+id/btnRetour"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:text="@string/retour"
            android:textSize="25dp"
            android:background="@drawable/bouton_moyen"/>
        <Button
            android:id="@+id/btnEffacer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:text="@string/effacer"
            android:textSize="25dp"
            android:background="@drawable/bouton_fonce"
            android:textColor="#ffffff"/>
        <Button
            android:id="@+id/btnEffacerTout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:text="@string/effacerTout"
            android:textSize="25dp"
            android:background="@drawable/bouton_fonce"
            android:textColor="#ffffff"/>
        <Button
            android:id="@+id/btnSigne"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:text="@string/signe"
            android:textSize="25dp"
            android:background="@drawable/bouton_moyen"/>
        <Button
            android:id="@+id/btnRacine"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:text="@string/racine"
            android:textSize="25dp"
            android:background="@drawable/bouton_moyen"/>

        <!-- Deuxième rangée -->
        <Button
            android:id="@+id/btnSept"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:text="@string/sept"
            android:textSize="25dp"
            android:background="@drawable/bouton_pale"/>
        <Button
            android:id="@+id/btnHuit"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:text="@string/huit"
            android:textSize="25dp"
            android:background="@drawable/bouton_pale"/>
        <Button
            android:id="@+id/btnNeuf"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:text="@string/neuf"
            android:textSize="25dp"
            android:background="@drawable/bouton_pale"/>
        <Button
            android:id="@+id/btnDivi"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:text="@string/divi"
            android:textSize="25dp"
            android:background="@drawable/bouton_moyen"/>
        <Button
            android:id="@+id/btnPourcent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:text="@string/pourcent"
            android:textSize="25dp"
            android:background="@drawable/bouton_moyen"/>

        <!-- Troisième rangée -->
        <Button
            android:id="@+id/btnQuatre"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:text="@string/quatre"
            android:textSize="25dp"
            android:background="@drawable/bouton_pale"/>
        <Button
            android:id="@+id/btnCinq"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:text="@string/cinq"
            android:textSize="25dp"
            android:background="@drawable/bouton_pale"/>
        <Button
            android:id="@+id/btnSix"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:text="@string/six"
            android:textSize="25dp"
            android:background="@drawable/bouton_pale"/>
        <Button
            android:id="@+id/btnMulti"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:text="@string/multi"
            android:textSize="25dp"
            android:background="@drawable/bouton_moyen"/>
        <Button
            android:id="@+id/btnInverse"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:text="@string/inverse"
            android:textSize="25dp"
            android:background="@drawable/bouton_moyen"/>

        <!-- Quatrième rangée -->
        <Button
            android:id="@+id/btnUn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:text="@string/un"
            android:textSize="25dp"
            android:background="@drawable/bouton_pale"/>

        <Button
            android:id="@+id/btnDeux"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:text="@string/deux"
            android:textSize="25dp"
            android:background="@drawable/bouton_pale"/>
        <Button
            android:id="@+id/btnTrois"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:text="@string/trois"
            android:textSize="25dp"
            android:background="@drawable/bouton_pale"/>
        <Button
            android:id="@+id/btnMoins"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:text="@string/moins"
            android:textSize="25dp"
            android:background="@drawable/bouton_moyen"/>

        <Button
            android:id="@+id/btnEgal"
            android:layout_rowSpan="2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_vertical"
            android:text="@string/egal"
            android:textSize="25dp"
            android:background="@drawable/bouton_moyen"/>

        <!-- Dernière rangée -->
        <Button
            android:id="@+id/btnZero"
            android:layout_columnSpan="2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:text="@string/zero"
            android:textSize="25dp"
            android:background="@drawable/bouton_pale"/>

        <Button
            android:id="@+id/btnVirgule"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:text="@string/virgule"
            android:textSize="25dp"
            android:background="@drawable/bouton_moyen"/>

        <Button
            android:id="@+id/btnPlus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:text="@string/plus"
            android:textSize="25dp"
            android:background="@drawable/bouton_moyen"/>
    </GridLayout>
</LinearLayout>